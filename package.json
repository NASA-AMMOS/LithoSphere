    "main": "./dist/lithosphere.js",
    "types": "./dist/lithosphere.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "start": "npm run start:dev",
        "start:dev": "webpack --mode=development --watch --progress",
