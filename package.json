{
    "name": "lithosphere",
    "version": "1.0.0",
    "description": "A GIS library for building 3D tile-based globes.",
    "author": "Tariq Soliman",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.jpl.nasa.gov/tsoliman/LithoSphere/issues"
